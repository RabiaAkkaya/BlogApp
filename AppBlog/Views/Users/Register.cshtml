@model RegisterViewModel
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">           
   
    <h1 class="h3 mt-5 mb-3 fw-normal">Kayıt</h1>
    <form asp-controller="Users" asp-action="Register" method="post">
      
      <div class="form-floating">
      <input type="text" asp-for="Name" class="form-control mb-2">
      <label for="floatingInput">Kullanıcı Adı</label>
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-floating">
      <input type="text" asp-for="UserName" class="form-control mb-2">
      <label for="floatingInput">Ad Soyad</label>
      <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-floating">
      <input type="email" asp-for="Mail" class="form-control mb-2">
      <label for="floatingInput">Mail Adres</label>
      <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-floating">
      <input type="password" asp-for="Password" class="form-control mb-3">
      <label for="floatingPassword">Şifre</label>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
   <div class="form-floating">
      <input type="password" asp-for="ConfirmPassword" class="form-control mb-3">
      <label for="floatingPassword">Şifre Tekrar</label>
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
   
    <button class="btn btn-primary w-100 py-2" type="submit">Kayıt  Ol</button>
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <p class="mt-5 mb-3 text-body-secondary">©2023</p>
       
  </form>
  </div>
    
    <div class="col-3"></div>

</div>
