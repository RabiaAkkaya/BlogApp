@model LoginViewModel
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">           
   
    <h1 class="h3 mt-5 mb-3 fw-normal">Giriş</h1>
    <form asp-controller="Users" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
      <input type="email" asp-for="Mail" class="form-control mb-2">
      <label for="floatingInput">Mail Adres</label>
      <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-floating">
      <input type="password" asp-for="Password" class="form-control mb-3">
      <label for="floatingPassword">Şifre</label>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
  
    <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
      
    <p class="mt-5 mb-3 text-body-secondary">©2023</p>

        </form>
  </div>
    
    <div class="col-3"></div>

</div>