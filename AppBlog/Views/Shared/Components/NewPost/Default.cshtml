@model List<Post>
    <div class="card mt-3">
        <div class="card-header"><h5 class="card-title mb-0">Yeni Postlar</h5></div>
        <div class="card-body">
            @foreach(var post in Model)
            {
                <div class="mb-3">
                <a href="/posts/details/@post.url"><h6 class="mb-0">@post.Title</h6></a>
                </div>
            }
        </div>
    </div>