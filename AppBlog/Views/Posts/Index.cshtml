@model PostsViewModel
    <div class="row">
     <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h-4 mb-4">Popular Post</h1>
          
            @foreach(var post in Model.Posts.Take(5))
             {
                
             <div class="card bg-transparent border-0 mb-3">

                <div class="row">
                    <div class=col-4>
                        <img src="~/Images/@post.Image" class="Img-fluid rounded w-100" alt="">
                    </div>
                       <div class=col-8>
                        <h5><a href="/posts/details/@post.url" class="btn-link fw-bold">@post.Title</a></h5>
                        <p>@post.Description</p>
                        <a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Devamını Göster..</a>
                    </div>
                </div>
             </div>
             <hr class="my-3">
             
             }  
             
                
                 <nav>
                <ul class="pagination"> 
                       
              @{int j=1;}          
             @for(int i=0;i<Model.Posts.Count;i++)
             {                 
                    @if(i%5==0)
                    {                                                                   
                    <li class="page-item "><a href="/posts/Index/@j" class="page-link"><span>@j</span></a></li>                
                     j++;
                    }                          
             }
              </ul>
             </nav>
             
        </div>
    </div>
     <div class="col-lg-4 bg-white">
     <vc:tags-menu></vc:tags-menu>   
     <vc:new-post></vc:new-post>   
     
     </div>
      </div>  
               


        </div>

    